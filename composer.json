{
    "name": "jsuarezwd/slim-api-quickstart",
    "description": "For faster development to APIs with Slim framework ",
    "keywords": ["microframework","slim","rest", "router", "psr7"],
    "homepage": "https://github.com/jsuarezwd/slim-api-quickstart",
    "license": "MIT",
    "authors": [
        {
            "name": "Junior Suarez",
            "email": "juniorsuarez92@gmail.com",
            "homepage": "http://www.imagirom.com"
        }
    ],
    "require": {
        "slim/slim": "^3.0",
        "phpunit/phpunit": "^6.5",
        "Illuminate/database": "^6.1",
        "monolog/monolog": "^1.23",
        "tuupola/cors-middleware": "^0.5.2"
    },
    "autoload":{
        "psr-4": {
            "App\\":"app",
            "Src\\":"src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }
}
